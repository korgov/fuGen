<idea-plugin version="2">
  <name>fuGen</name>
  <description>Generating const fields like Function&lt;This, FieldType&gt; and getter(if need) for selected fields.</description>
  <version>1.1.0</version>
  <vendor>Kirill Korgov</vendor>

  <idea-version since-build="107.105"/>

    <change-notes><![CDATA[
        1.1.0<br>
        <ul>
            <li>Added properties to Settings menu (Ctrl+Alt+S)</li>
            <li>Added static field generation by custom template</li>
            <li>Added static method generation by custom template</li>
        </ul>
        1.0.0<br>
        <ul><li>Initial release.</li></ul>
    ]]></change-notes>

  <application-components>
  </application-components>

  <project-components>
      <component>
          <implementation-class>ru.korgov.intellij.fugen.FuGenProjectComponent</implementation-class>
      </component>
  </project-components>

  <actions>
      <action id="ru.korgov.intellij.fugen.actions.GenerateFieldFunctionsAction"
              class="ru.korgov.intellij.fugen.actions.GenerateFieldFunctionsAction" text="Functions"
              description="Generate Functions">
          <add-to-group group-id="GenerateGroup" anchor="after" relative-to-action="JavaGenerateGroup2"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
      <projectService serviceImplementation="ru.korgov.intellij.fugen.properties.PersistentStateProperties"/>
  </extensions>
</idea-plugin>